
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="row align-items-center">
        <div class="col-md-3">
            <h2>Packages</h2>
        </div>

        <div class="col-md-9 text-right">
            <input type="button" class="btn btn-primary" value="Back to Main Page" onclick="location.href='@Url.Action("Index", "Main")'" />
        </div>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-hover ">
        <thead style="font-weight:700;font-size:110%;">
            <tr>
                <td>Package ID</td>
                <td>Order/Shipment ID</td>
                <td>Supplier ID</td>
                <td>Created At</td>
                <td>Status</td>
                <td>Notes</td>
            </tr>
        </thead>
        <hr />
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td scope="row">@item.packageID</td>
                    @if (item.isProvided == false)
                    {
                        <td>Order #@item.orderID</td>
                    }
                    else
                    {
                        <td>Shipment #@item.shipmentID</td>
                    }
                    <td>@item.supplierID</td>
                    <td>@item.createdTime</td>
                    <td>@item.packageStatus</td>
                    <td>@item.notes</td>
                    <td>
                        @Html.ActionLink("Detail", "DetailPackage", "Packages", new { id = item.packageID }, null) |
                        @Html.ActionLink("Edit", "EditPackage", "Packages", new { id = item.packageID }, null) |
                        @Html.ActionLink("Delete", "DeleteFromPackages", "Packages", new { id = item.packageID }, new { onclick = "return confirm('Are you sure you wish to delete this package?'); " })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



