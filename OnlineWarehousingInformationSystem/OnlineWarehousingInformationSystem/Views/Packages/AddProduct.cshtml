@model OnlineWarehousingInformationSystem.Models.PackageContents
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function validateForm() {
        var id = document.getElementById("id").value;
        var quantity = document.getElementById("quantity").value;
        if (id == "" || quantity == "") {
            alert("Please fill in mandatory fields");
            return false;
        }
        if ('@ViewBag.type'.toString() == "1") {
            document.getElementById("q_error").innerHTML = "aksdnasndmasdn";
            return false;
        }
        return Form.submit();
    }
</script>

<div class="row">
    <div class="row align-items-center">
        <div class="col-md-12">
            <div class="col-md-10">
                <h3>Add Product</h3>
            </div>
            <div class="col-md-2">
                <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Request.UrlReferrer'" />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.contentID)
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <b class="control-label col-md-2">Product ID</b>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.productID, new { id = "id", style = "border:groove 1px gray;border-radius:5px;height:30px;width:600px;" })
                <b id="desc_error" style="color:red;font-weight:300"></b>
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Product Quantity</b>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.productQuantity, new { id = "quantity", style = "border:groove 1px gray;border-radius:5px;height:30px;width:600px;" })
                <b id="quantity_error" style="color:red;font-weight:300"></b>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-success" onclick="return validateForm();" />
            </div>
        </div>
    </div>
}


