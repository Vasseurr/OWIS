@model OnlineWarehousingInformationSystem.Models.PackageContents
@{
    ViewBag.Title = "UpdatePackageProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function validateForm() {
        var q = document.getElementById("quantity").value;
        if (q == "") {
            alert("Please fill in mandatory fields");
            return false;
        }
        return Form.submit();
    }
</script>

<div class="row">
    <div class="row align-items-center">
        <div class="col-md-12">
            <div class="col-md-10">
                <h3>Edit Product Quantity</h3>
            </div>
            <div class="col-md-2">
                <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Request.UrlReferrer'" />
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.packageID)
        @Html.HiddenFor(model => model.productID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b class="control-label col-md-2">Product Quantity</b>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.productQuantity, new { id = "quantity", style = "border:groove 1px gray;border-radius:5px;height:30px;width:600px;" })
                <b style="color:red;font-weight:300">@Html.ValidationMessageFor(model => model.productQuantity, "", new { @class = "text-danger" })</b>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-success" onclick="return validateForm();"/>
            </div>
        </div>
    </div>
}

