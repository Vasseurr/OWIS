
@{
    ViewBag.Title = "DetailShipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>

    @foreach (var item in Model.Shipment)
    {
        <div class="row gutters-sm">

            <div class="row">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <h3>Shipment Details</h3>
                        </div>
                        <div class="row col-md-9 text-right">
                            <ul>
                                <li style="text-decoration:none;display:inline-block">
                                    <input type="button" class="btn btn-success" value="Add New Package" onclick="location.href='@Url.Action("AddPackage", "Packages",new { id = item.shipmentID, type = true })'" />
                                </li>
                                <li style="text-decoration:none;display:inline-block">
                                    <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Shipments")'" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="card mt-3">
                                <h4>Bill Information</h4>
                                @foreach (var i in item.Bills)
                                {
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Invoice ID</h6>
                                            <span class="text-secondary">@i.invoiceID</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Payment Type</h6>
                                            <span class="text-secondary">@i.paymentType</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Amount</h6>
                                            <span class="text-secondary">@i.amount $</span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Operation Date</h6>
                                            <span class="text-secondary">@i.operationDate</span>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <hr />

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Shipment ID</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.shipmentID
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Warehouse ID</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.warehouseID
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Description</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.shipmentDescription
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Shipment Date</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @item.shipmentDate
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    }
</table>

<h4>Contained Packages</h4>
<div class="table-responsive">
    
    <table class="table table-hover ">
        <thead style="font-weight:700;font-size:110%;">
            <tr>
                <td>Package ID</td>
                <td>Supplier ID</td>
                <td>Supplier</td>
                <td>Created At</td>
                <td>Status</td>
                <td>Notes</td>
            </tr>
        </thead>
        <hr />
        <tbody>
            @foreach (var item in Model.Packages)
            {
                <tr>

                    <td scope="row">@item.packageID</td>
              
                    <td>@item.supplierID</td>
                    <td>@item.Suppliers.supplierName</td>
                    <td>@item.createdTime</td>
                    <td>@item.packageStatus</td>
                    <td>@item.notes</td>
                    <td>
                        @Html.ActionLink("Detail", "DetailPackage", "Packages", new { id = item.packageID }, null) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>