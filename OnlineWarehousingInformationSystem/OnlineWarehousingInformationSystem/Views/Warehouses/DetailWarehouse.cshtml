
@{
    ViewBag.Title = "DetailWarehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>

    @foreach (var item in Model)
    {
        <div class="row gutters-sm">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="col-md-3">
                        <h3>Warehouse Details</h3>
                    </div>
                    <div class="row col-md-9 text-right">
                        <ul>
                            <li style="text-decoration:none;display:inline-block">
                                <input type="button" class="btn btn-primary" value="Warehouse Content" onclick="location.href='@Url.Action("ShowContents", "Warehouses", new { id = @item.warehouseID})'" />
                            </li>
                            <li style="text-decoration:none;display:inline-block">
                                <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Warehouses")'" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="mt-3">
                            <h4>@item.warehouseName</h4>
                            @if (HttpContext.Current.Session["UserType"].ToString().Equals("2"))
                            {
                                @Html.ActionLink("Edit", "EditWarehouse", "Warehouses", new { id = @item.warehouseID }, null)
                                if (item.warehouseID > 1)
                                {
                                   <span>| </span>@Html.ActionLink("Delete", "DeleteFromWarehouses", "Warehouses", new { id = @item.warehouseID }, new { onclick = "return confirm('Are you sure you wish to delete this warehouse with its contents?'); " })

                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>

        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Warehouse ID</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.warehouseID
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Warehouse Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.warehouseName
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Country</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.country
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">City</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.city
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Address</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.warehouseAddress
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">ZIP</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.ZIP
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Warehouse Status</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.warehouseStatus
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Phone Number</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.phoneNumber
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.email
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Max Capacity</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @item.maxCapacity
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Current Capacity</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @if (@item.currentCapacity == null)
                            {
                                <p>0</p>
                            }
                            @if (@item.currentCapacity > 0)
                            {
                                @item.currentCapacity
                            }

                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    }
    
</table>

